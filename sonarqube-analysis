pipeline                  
{
	agent any
	stages 
	{	
     stage('Build')
		{ 

			agent
			{
	      			docker
				{
		    			image 'maven:3-alpine' 
		    			args '-v /root/.m2:/root/.m2' 
				}
    			} 
				
            		steps 
			{
				sh 'mvn clean package'
				stash name: 'war', includes: 'target/**'
         		}
		}
		stage('Analysis ')
		{
			steps 
			{
        withSonarQubeEnv('Sonar'){
          sh "${mvnHome}/bin/mvn sonar:sonar"
        }
			}
		}
	}
}
